<p id="notice"><%= notice %></p>

<h1>Grandmas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Username</th>
      <th>Password</th>
      <th>Img url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grandmas.each do |grandma| %>
      <tr>
        <td><%= grandma.name %></td>
        <td><%= grandma.username %></td>
        <td><%= grandma.password %></td>
        <td><%= link_to 'Show', grandma %></td>
        <td><%= link_to 'Edit', edit_grandma_path(grandma) %></td>
        <td><%= link_to 'Destroy', grandma, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Grandma', new_grandma_path %>
